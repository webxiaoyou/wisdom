.u-flex {
  display: flex;
}
.u-flex-m {
  flex: 1;
  overflow: hidden;
}
.moreText {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.popup {
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
}
/* 头部商品开始 */
.topGoods {
  overflow: hidden;
  position: relative;
  display: flex;
  /* border-bottom: 1px solid #f5f5f5; */
  padding: 40rpx 40rpx 24rpx 40rpx;
  box-sizing: border-box;
}
.topGoods .Pic {
  width: 136rpx;
  height: 136rpx;
}
.topGoods .Pic .goodsImage {
  width: 136rpx;
  height: 136rpx;
  border-radius: 10rpx;
}
.topGoods .goodsInfo {
  margin-left: 20rpx;
  width: 100%;
}
.topGoods .goodsInfo .goodsName {
  font-size: 32rpx;
  font-weight: bold;
  padding-right: 35rpx;
}
.topGoods .goodsInfo .goodsDescription {
  color: #999;
  font-size: 22rpx;
  line-height: 24rpx;
  margin-top: 10rpx;
  display: inline-block;
  white-space: nowrap;
  width: 490rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.topGoods .goodsInfo .goodsData {
  display: flex;
  flex-direction: row;
}
.topGoods .goodsInfo .goodsData text {
  color: #666;
  font-size: 24rpx;
}
.topGoods .goodsInfo .goodsData .monthlySales {
  margin-right: 20rpx;
}
.topGoods .goodsInfo .goodsData .monthlySales .clickWord {
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.topGoods .goodsInfo .bottomOperation {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  align-items: center;
}
.topGoods .goodsInfo .bottomOperation .retailPrice {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  color: #fe461d;
  margin-right: 24rpx;
}
.topGoods .goodsInfo .bottomOperation .retailPrice .fuhao {
  font-size: 22rpx;
}
.topGoods .goodsInfo .bottomOperation .retailPrice .Price {
  font-size: 38rpx;
  font-weight: bold;
  line-height: 38rpx;
}
.popupCenter {
  color: #333;
  position: relative;
  width: 100%;
  padding: 0 40rpx;
}
.popupCenter .goodsSpec {
  color: #333;
}
.popupCenter .goodsSpec .freeSpecs {
  color: #333;
}
.popupCenter .goodsSpec .name {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.popupCenter .goodsSpec .specList {
  margin-top: 20rpx;
}
.popupCenter .goodsSpec .specList .button {
  padding: 0rpx 44rpx;
  color: #262626;
  background: #f2f2f2;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  height: 70rpx;
  line-height: 68rpx;
  border-radius: 35px;
  box-sizing: border-box;
  font-size: 28rpx;
  overflow: initial;
  display: inline-block;
}
.popupCenter .goodsSpec .specList .button.click {
  color: #65b05b;
  background: #f0f9eb;
}
.popupCenter .goodsSpec .specList .button::after {
  border: none;
}
.determine {
  padding: 20rpx 40rpx;
  background: #fff;
}
.determine .button {
  padding: 0rpx 44rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45px;
  background: #65b05b;
  border: none;
}
.numberBox .minus, .numberBox .plus {
  width: 60rpx;
  height: 54rpx;
  border: 1rpx solid #eee;
  justify-content: center;
}
.numberBox .minus {
  border-radius: 6rpx 0 0 6rpx;
}
.numberBox .plus {
  border-radius: 0 6rpx 6rpx 0;
}
.numberBox .inputBox {
  width: 60rpx;
  height: 54rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.numberBox .inputBox input {
  width: 100%;
  height: 100%;
  border: 0;
  text-align: center;
  font-size: 26rpx;
}

